# Copy to .env and fill values; DO NOT commit real secrets
# Core
DJANGO_ENV=development
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=change-me-to-a-random-string

# Database (default sqlite). Examples:
# sqlite on Windows needs absolute path or relative path under project root
DATABASE_URL=sqlite:///db.sqlite3
# DATABASE_URL=mysql://user:pass@host:3306/dbname
# DATABASE_URL=postgres://user:pass@host:5432/dbname

# Cache (Production recommend Redis, dev can use locmem)
# CACHE_URL=redis://:password@redis-host:6379
CACHE_URL=locmem:///

# Public server base URL used in docs or links
SERVER_URL=http://localhost:8000

# Not read from env by default but keep here as reminder
# ALLOWED_HOSTS is configured in settings/environments/*.py
# If you fork settings to read from env, use comma separated list, e.g.:
# ALLOWED_HOSTS=localhost,127.0.0.1,example.com
